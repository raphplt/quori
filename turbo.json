{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "AUTH_GITHUB_ID",
    "AUTH_GITHUB_SECRET",
    "NEXT_PUBLIC_API_URL",
    "FRONTEND_URL",
    "AUTH_SECRET",
    "NEXTAUTH_DEBUG"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
    "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
    ]
},
"start:dev": {
    "cache": false,
    "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
        "dependsOn": [
            "^build"
        ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
